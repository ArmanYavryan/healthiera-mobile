<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF0F1"
    tools:context="com.healthiera.mobile.fragment.StatusGraph">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <com.healthiera.mobile.component.base.BaseTextView
                    android:id="@+id/healthStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Status Graphs"
                    android:textColor="#90939B"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/signin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Day"
                        android:textColor="#ffffff"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Week"
                        android:textColor="#ffffff"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Month"
                        android:textColor="#ffffff"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Year"
                        android:textColor="#ffffff"
                        android:textSize="18dp" />

                </LinearLayout>

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/gv1"
                    android:layout_width="match_parent"
                    android:layout_height="161dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/graph_view" />

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/gv2"
                    android:layout_width="match_parent"
                    android:layout_height="161dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/graph_view2" />

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/gv3"
                    android:layout_width="match_parent"
                    android:layout_height="161dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/graph_view3" />

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/gv4"
                    android:layout_width="match_parent"
                    android:layout_height="161dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/graph_view4" />

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/gv5"
                    android:layout_width="match_parent"
                    android:layout_height="161dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/graph_view5" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>
