<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="Wight :"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#4C4C4C"
                android:textStyle="italic" />
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="60dp"
                android:textSize="10pt"
                android:id="@+id/editTextWight"
                android:inputType="number"
                android:ems="10"
                android:maxLength="3"
                android:enabled="false"
                android:focusable="false"
                android:textColor="#4C4C4C" />
            <TextView
                android:text="kg"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#4C4C4C"
                android:textStyle="italic" />

        </TableRow>
        <TableRow
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Height :"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#4C4C4C"
                android:textStyle="italic" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:inputType="number"
                android:ems="10"
                android:maxLength="3"
                android:enabled="false"
                android:focusable="false"
                android:id="@+id/editTextHeight"
                android:textColor="#4C4C4C"
                />

            <TextView
                android:text="cm"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#4C4C4C"
                android:textStyle="italic" />

        </TableRow>
        <TableRow
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Body mass index :"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#4C4C4C"
                android:textStyle="italic" />
            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textSize="10pt"
                android:inputType="number"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:maxLength="3"
                android:id="@+id/editTextMass"
                android:textColor="#4C4C4C"
                />
            <TextView
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#4C4C4C"
                android:textStyle="italic" />
        </TableRow>
        <TableRow
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Pulse :"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#4C4C4C"
                android:textStyle="italic" />
            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textSize="10pt"
                android:inputType="number"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:maxLength="3"
                android:id="@+id/editTextPulse"
                android:textColor="#4C4C4C"
                />
            <TextView
                android:text="BPM"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#4C4C4C"
                android:textStyle="italic" />
        </TableRow>
        <TableRow
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Thallium/Hips :"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#4C4C4C"
                android:textStyle="italic" />
            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textSize="10pt"
                android:inputType="number"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:maxLength="3"
                android:textColor="#4C4C4C"
                android:id="@+id/editTextThalliumHip"
                />
            <TextView
                android:text=""
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#4C4C4C"
                android:textStyle="italic" />
        </TableRow>
        <TableRow
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Blood pressure systolic :"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#4C4C4C"
                android:textStyle="italic" />
            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textSize="10pt"
                android:inputType="number"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:maxLength="3"
                android:textColor="#4C4C4C"
                android:id="@+id/editTextBloodPressureSystolic"/>
                <TextView
                    android:text="mmHg"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20px"
                    android:textColor="#4C4C4C"
                    android:textStyle="italic" />

        </TableRow>
        <TableRow
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Blood pressure diastolic:"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#4C4C4C"
                android:textStyle="italic"/>
            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textSize="10pt"
                android:inputType="number"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:maxLength="3"
                android:textColor="#4C4C4C"
                android:id="@+id/editTextBloodPressureDiastolic"/>
                <TextView
                android:text="mmHg"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#4C4C4C"
                android:textStyle="italic" />
        </TableRow>
    </TableLayout>

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEdit"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
       />

</LinearLayout>