<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF0F1"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:weightSum="4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EAEDF2">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="4dp">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Search for questions"
                            android:textColorHint="#EF686A"
                            app:hintTextAppearance="@style/TextHintStyle">

                            <AutoCompleteTextView
                                android:id="@+id/etSearchQuestions"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/transparent"
                                android:drawableLeft="@drawable/search"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingBottom="12dp"
                                android:paddingTop="0dp"
                                android:textColor="#696969"
                                android:textSize="16dp"
                                android:textStyle="italic" />
                        </android.support.design.widget.TextInputLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="4dp">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Search for provider"
                            android:textColorHint="#EF686A"
                            app:hintTextAppearance="@style/TextHintStyle">

                            <AutoCompleteTextView
                                android:id="@+id/etSearchProvider"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/transparent"
                                android:drawableLeft="@drawable/search"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingBottom="12dp"
                                android:paddingTop="0dp"
                                android:textColor="#696969"
                                android:textSize="16dp"
                                android:textStyle="italic" />
                        </android.support.design.widget.TextInputLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </TableLayout>

            <LinearLayout
                android:id="@+id/linearLayoutStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.healthiera.mobile.component.base.BaseTextView
                            android:id="@+id/healthStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/transparent"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Health status"
                            android:textColor="#458495"
                            android:textSize="20dp" />

                        <com.jjoe64.graphview.GraphView
                            android:id="@+id/gvHealthStatus"
                            android:layout_width="match_parent"
                            android:layout_height="161dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/graph_view" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.CardView
                                android:layout_gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#50b1ae"
                                app:cardCornerRadius="5dp">

                                <TextView
                                    android:id="@+id/show_advanced"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="Show Advanced"
                                    android:textColor="#ffffff"
                                    android:textSize="18dp" />
                            </android.support.v7.widget.CardView>
                        </FrameLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </TableLayout>
    </ScrollView>
</LinearLayout>