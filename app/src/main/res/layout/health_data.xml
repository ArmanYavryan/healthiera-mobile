<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.healthiera.mobile.activity.main.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </TableRow>

        <ScrollView
            android:layout_height="match_parent"
            android:background="#F5F5F5">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_gray"
                    android:paddingRight="5dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="2dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="false"
                        android:contextClickable="false"
                        android:cropToPadding="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:forceHasOverlappingRendering="false"
                        android:maxHeight="30dp"
                        android:nestedScrollingEnabled="false"
                        android:padding="1dp"
                        android:src="@drawable/complains" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:shadowColor="#a0ffffff"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:text="Complains and Symptoms"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#008490"
                        android:textSize="17dp"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="false"
                        android:cropToPadding="false"
                        android:focusableInTouchMode="false"
                        android:forceHasOverlappingRendering="false"
                        android:maxHeight="15dp"
                        android:src="@drawable/arrow_right" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_gray"
                    android:paddingRight="5dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="false"
                        android:contextClickable="false"
                        android:cropToPadding="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:forceHasOverlappingRendering="false"
                        android:maxHeight="30dp"
                        android:nestedScrollingEnabled="false"
                        android:src="@drawable/heredity" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:shadowColor="#a0ffffff"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:text="Heredity (Family History)"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#008490"
                        android:textSize="17dp"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="false"
                        android:cropToPadding="false"
                        android:focusableInTouchMode="false"
                        android:forceHasOverlappingRendering="false"
                        android:maxHeight="15dp"
                        android:src="@drawable/arrow_right" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_gray"
                    android:paddingRight="5dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="3dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="false"
                        android:contextClickable="false"
                        android:cropToPadding="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:forceHasOverlappingRendering="false"
                        android:maxHeight="30dp"
                        android:nestedScrollingEnabled="false"
                        android:src="@drawable/status" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:shadowColor="#a0ffffff"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:text="Status"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#008490"
                        android:textSize="17dp"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="false"
                        android:cropToPadding="false"
                        android:focusableInTouchMode="false"
                        android:forceHasOverlappingRendering="false"
                        android:maxHeight="15dp"
                        android:src="@drawable/arrow_right" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_gray"
                    android:paddingRight="5dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="false"
                        android:contextClickable="false"
                        android:cropToPadding="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:forceHasOverlappingRendering="false"
                        android:maxHeight="40dp"
                        android:nestedScrollingEnabled="false"
                        android:src="@drawable/device" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:shadowColor="#a0ffffff"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:text="Special devices"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#008490"
                        android:textSize="17dp"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="false"
                        android:cropToPadding="false"
                        android:focusableInTouchMode="false"
                        android:forceHasOverlappingRendering="false"
                        android:maxHeight="15dp"
                        android:src="@drawable/arrow_right" />
                </TableRow>

            </TableLayout>
        </ScrollView>
    </TableLayout>

</RelativeLayout>
